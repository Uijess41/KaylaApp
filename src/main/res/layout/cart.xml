<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_sea"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/mark" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/cancel" />


           <TextView

                android:id="@+id/productname"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_sea"
                android:gravity="center_vertical"
                android:text="Woman t-shirt"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_producttitle"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/productname"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_sea"
                android:text="Lotto. LTD"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doller"
                android:layout_width="wrap_content"

                android:layout_height="20dp"
                android:layout_below="@+id/txt_producttitle"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_sea"
                android:text="$"
                android:textColor="#4A5CC5"
                android:textSize="10sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"

                android:layout_height="20dp"
                android:layout_below="@+id/txt_producttitle"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/doller"
                android:text="34.00"
                android:textColor="#4A5CC5"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10sp"
                android:layout_toRightOf="@+id/img_sea"
                android:background="#F6F6F6"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtsub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_quntity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>