<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDF1FD"
    android:orientation="vertical"
    tools:context=".Activity.ReturnRequestActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bback"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#312DA5"
            android:text="Return Request" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="First Name" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:hint="34"
                android:singleLine="true"
                android:paddingStart="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bordercolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="Last Name" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:hint="Black"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bordercolor" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="Email" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:paddingStart="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bordercolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="Phone #" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:paddingStart="10dp"
                android:inputType="number"
                android:layout_marginRight="10dp"
                android:background="@drawable/bordercolor" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Date"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/edt"
            android:layout_below="@+id/date"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"

            android:paddingStart="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bordercolor" />

<ImageView
    android:layout_toRightOf="@+id/edt"
    android:layout_below="@+id/date"
    android:layout_width="25dp"
    android:layout_marginTop="10dp"
    android:layout_height="20dp"
    android:src="@drawable/calendar2"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason for refund"

            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damaged Product"

            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unauthentic Item"

            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong product Delivery"

            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excessive Amount"

            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"

            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/edtother"
            android:layout_below="@+id/date"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"

            android:paddingStart="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bordercolor" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="Product Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:paddingStart="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bordercolor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="Order Number" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:paddingStart="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bordercolor" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When did you by product"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/edtproduct"
            android:layout_below="@+id/product"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"

            android:paddingStart="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bordercolor" />

        <ImageView
            android:visibility="gone"
            android:layout_toRightOf="@+id/product"
            android:layout_below="@+id/product"
            android:layout_width="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            android:src="@drawable/calendar2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <com.karacce.buttom.Buttom
            android:id="@+id/btnrequest"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Request"
            android:textColor="#FFFFFF"
            app:buttom_corner_radius="12dp"
            app:buttom_gradient_end_color="#6691F0"
            android:layout_marginBottom="10dp"
            app:buttom_gradient_orientation="right_left"
            app:buttom_gradient_start_color="#64B5FF"
            app:buttom_gradient_type="linear"
            app:buttom_type="gradient" />
    </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>