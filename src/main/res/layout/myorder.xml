<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_sea"
                android:layout_width="100dp"
                android:scaleType="centerCrop"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/mark" />

            <TextView
                android:id="@+id/img_return"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:background="#B05506"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"

                android:fontFamily="@font/cnbold"
                android:gravity="center"
                android:src="@drawable/cancel"
                android:text="Returned"

                android:textColor="@color/white" />


            <TextView

                android:id="@+id/txt_tshirt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_sea"
                android:gravity="center_vertical"
                android:text="Woman t-shirt"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/txt_tshirt"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_sea"
                android:text="Lotto. LTD"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdoller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_sea"
                android:text="$"
                android:textColor="#4A5CC5"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtprice"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/txt_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/txtdoller"
                android:text="34.00"
                android:textColor="#4A5CC5"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/txtdoller"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_sea"
                android:text="Order #:"
                android:textColor="#067D17"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/ordernu"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/txtdoller"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/order"
                android:text="123456789"
                android:textColor="#000"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/img_sea"
                android:weightSum="2">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/btnstatus"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Status History"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"

                    android:textAllCaps="false"
                    android:textSize="10sp">

                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/request"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Request Return"
                    android:textColor="@color/black"
                    android:gravity="center"

                    android:layout_gravity="center_vertical"

                    android:textAllCaps="false"
                    android:textSize="10sp">

                </com.google.android.material.textview.MaterialTextView>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>