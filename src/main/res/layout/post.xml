<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_sea"
                android:layout_width="100dp"
                android:layout_centerVertical="true"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/mark3"/>
            <TextView
                android:id="@+id/img_delete"
                android:layout_below="@+id/textViewTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#FB1415"
                android:fontFamily="@font/cnbold"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Sold"/>


            <TextView

                android:layout_toRightOf="@+id/img_sea"
                android:id="@+id/textViewTitle1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/cnbold"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="Woman t-shirt"/>
            <TextView
                android:layout_toRightOf="@+id/img_sea"
                android:layout_below="@+id/textViewTitle1"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/txtprice"
                android:fontFamily="@font/cnbold"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Lotto. LTD"/>

            <TextView
                android:id="@+id/txtdoller"
                android:layout_toRightOf="@+id/img_sea"
                android:layout_below="@+id/txtprice"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#4A5CC5"

                android:fontFamily="@font/cnbold"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="N"/>

            <TextView
                android:id="@+id/txt_price"
                android:layout_toRightOf="@+id/txtdoller"
                android:layout_below="@+id/txtprice"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#4A5CC5"

                android:fontFamily="@font/cnbold"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="34.00"/>

            <LinearLayout
                android:layout_marginBottom="10sp"
                android:layout_toRightOf="@+id/img_sea"
                android:layout_below="@+id/txtdoller"
                android:layout_width="100dp"
                android:background="@drawable/gradieant"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtsub"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Edit"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    android:textColor="@color/white"/>

            </LinearLayout>

           <!-- <com.karacce.buttom.Buttom
                android:id="@+id/btnlogin"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:text="Edit"
                android:textColor="#FFFFFF"
                app:buttom_corner_radius="12dp"
                app:buttom_gradient_end_color="#6691F0"
                app:buttom_gradient_orientation="right_left"
                app:buttom_gradient_start_color="#64B5FF"
                app:buttom_gradient_type="linear"
                app:buttom_type="gradient" />-->
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>