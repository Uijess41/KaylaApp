    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_puff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/cnbold"
                android:text="Puff-sleeved Dress"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/dollerpuff"
                android:layout_below="@+id/txt_puff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/pricepuff"
                android:layout_toRightOf="@+id/dollerpuff"
                android:layout_below="@+id/txt_puff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/dollerpuff2"
